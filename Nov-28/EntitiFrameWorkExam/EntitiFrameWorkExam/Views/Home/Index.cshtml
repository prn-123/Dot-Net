@model IEnumerable<EntitiFrameWorkExam.Models.Course>
@{
    ViewBag.Title = "Home Page";
}
@Html.ActionLink("Create New", "Create", "Home")

<table class="table">
    <tr>
        <th>
            Course Name
        </th>
        <th>
            Duration
        </th>
        <th>
            Remarks
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.CourseName
            </td>
            <td>
                @item.Duration
            </td>
            <td>
                @item.Remarks
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new {id = item.CourseId })
                @Html.ActionLink("Details", "Detail", new { id = item.CourseId })
            </td>
        </tr>
    }
</table>